@model IEnumerable<Xpro_test_1.Models.Absence>

@{
    ViewData["Title"] = "Absences List";
}

<h2>Absences</h2>

<a href="@Url.Action("Create", "Absence")" class="btn btn-primary mb-3">Add New Absence</a>

<!-- Absence Table -->
<table class="table table-striped table-hover mt-3" style="width: 80%; margin-left: auto; margin-right: auto;">
    <thead class="table-dark">
        <tr>
            <th>Absence Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var absence in Model)
        {
            <tr>
                <td>@absence.Type</td>
                <td class="text-end">
                    <a href="@Url.Action("Edit", "Absence", new { id = absence.Id })" class="btn btn-warning me-2">Edit</a>

                    <form asp-controller="Absence" asp-action="Delete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@absence.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this absence?');">Delete</button>
                    </form>



                </td>
            </tr>
        }
    </tbody>
</table>

